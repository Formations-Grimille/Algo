ALGO EtudiantsEtMatieres

VARIABLES
  notes: tableau[3, 15] de flottant
  matieres: tableau[3] de chaine
  i, j : entier

DÉBUT

  //matieres[0] <- "informatique"
  //matieres[1] <- "comptabilité"
  //matieres[2] <- "mathématiques"

  POUR i ALLANT DE 0 À 2 FAIRE
    ÉCRIRE("Saisir le nom de la matière n°", i+1)
    LIRE(matieres[i])
  FINPOUR

  // Parcourir les lignes du tableau 2D
  POUR i ALLANT DE 0 À 2 FAIRE

    // Parcourir les colonnes de chaque ligne du tableau 2D
    POUR j ALLANT DE 0 À 14 FAIRE

      ÉCRIRE("Saisir la note de la matière ", matieres[i], "pour l'étudiant n°", j+1)
      LIRE(notes[i,j])
      
    FINPOUR
  FINPOUR

FIN
ALGO PlusGrandNombre

VARIABLES
  nb, nbMax, i : entier

DÉBUT
  nbMax <- 0

  POUT i ALLANT DE 1 À 20 FAIRE

      ÉCRIRE("Saisir un nombre entier")
      LIRE(nb)

      /* Ajout de i = 1 pour mettre systématiquement la valeur de nb dans nbMax à la première itération */
      SI (nb > nbMax) OU (i = 1) ALORS
          nbMax <- nb
      FINSI

  FINPOUR

  ÉCRIRE("Le plus grand nombre est :", nbMax)

FIN